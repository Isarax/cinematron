!!!
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %meta{ 'http-equiv' => 'X-UA-Compatible', content: 'IE=Edge,chrome=1' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %title= 'Cinematron' + if yield(:title) != '' then ' Â· ' + yield(:title) else '' end
    = javascript_include_tag :application
    = ajaxful_rating_style
    = csrf_meta_tags
    = stylesheet_link_tag "application", media: "all"


  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{ 'data-target' => '.nav-collapse', 'data-toggle' => 'collapse' }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{ href: '/' }
            Cinematron
          .container.nav-collapse
            %ul.nav
              %li{ class: if params[:controller] == 'movies' then 'active' end }= link_to "Movies", movies_path
              %li{ class: if params[:controller] == 'people' then 'active' end }= link_to "People", people_path
            %ul.nav.pull-right
              - if user_signed_in?
                %li.dropdown
                  %a.dropdown-toggle{ 'data-toggle' => 'dropdown', href: '#' }
                    %i.icon-user
                    = current_user.name
                    %b.caret
                  %ul.dropdown-menu{ role: 'menu', 'aria-labelledby' => 'dLabel' }
                    %li= link_to "Edit profile", edit_user_registration_path
                    %li= link_to "Sign out", destroy_user_session_path, method: :delete
              - else
                %li= link_to "Sign in", new_user_session_path
                %li= link_to "Sign up", new_user_registration_path
    %div{ id: "fix-for-navbar-fixed-top-spacing", style: "height: 60px;"}
    .container
      .row
        = bootstrap_flash
        = yield

    = javascript_include_tag "application"

  %footer
    %br