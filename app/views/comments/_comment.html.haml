%div{ id: "#{comment.id}", class: 'well well-small' }
  %strong= comment.user.name
  %p= comment.body
  - if can? :manage, comment
    = link_to "Delete comment", movie_comment_path(comment.commentable, comment), |
                                method: 'delete', confirm: 'Are you sure?', |
                                class: 'btn btn-danger btn-mini ', remote: true
