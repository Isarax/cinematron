<%= form_for @movie, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :poster, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :poster, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :trailer, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :trailer, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :min_age, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :min_age, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :length, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :length, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :release_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :release_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :budget, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :budget, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :info, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :info, :class => 'text_area input-xxlarge', :rows => 5, :placeholder => 'Movie description...' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                movies_path, :class => 'btn' %>
  </div>
<% end %>
