- title 'Movies'
- model_class = Movie
.page-header
  %h2= yield :title

%table.table.table-striped.table-hover
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:min_age)
      %th= model_class.human_attribute_name(:length)
      %th= model_class.human_attribute_name(:release_date)
      %th= model_class.human_attribute_name(:budget)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @movies.each do |movie|
      %tr
        %td= link_to movie.name, movie_path(movie)
        %td= movie.min_age
        %td= movie.length
        %td= movie.release_date
        %td= movie.budget
        %td
          = link_to 'Edit', edit_movie_path(movie), :class => 'btn btn-mini'
          = link_to 'Destroy',
                      movie_path(movie),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger'

= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary'