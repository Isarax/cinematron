<%= simple_form_for(@movie, html: {class: 'form-horizontal'}) do |f| %>
  <%= f.input :name do %>
    <%= f.input_field :name %>
  <% end %>

  <%= f.input :poster do %>
    <%= f.input_field :poster %>
  <% end %>

  <%= f.input :trailer do %>
    <%= f.input_field :trailer %>
  <% end %>

  <%= f.association :people, as: :collection_select %>

  <%= f.input :min_age do %>
    <%= f.input_field :min_age %>
  <% end %>

  <%= f.input :length do %>
    <%= f.input_field :length %>
  <% end %>

  <%= f.input :release_date do %>
    <%= f.date_select :release_date, start_year: 1878, :include_blank => true, :default => nil %>
  <% end %>

  <%= f.input :budget do %>
    <%= f.input_field :budget %>
  <% end %>

  <%= f.input :info, input_html: { rows: 5, class: 'span6' }, placeholder: 'Movie description...' %>

  <%= f.button :submit, class: 'btn btn-primary offset1' %>

  <%= link_to t('.cancel', :default => t("helpers.links.cancel")), movies_path, :class => 'btn' %>
<% end %>