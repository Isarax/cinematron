<% title @movie.name %>
<%- model_class = Movie -%>
<div class="page-header">
  <h2><%= yield :title %></h2>
</div>

<div class="image">
  <img src= <%= @movie.poster %> class="img-rounded">
</div>

<div class="trailer">
  <a href=<%= @movie.trailer %>>Click here to see the trailer</a>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:min_age) %>:</strong></dt>
  <dd><%= @movie.min_age %></dd>
  <dt><strong><%= model_class.human_attribute_name(:length) %>:</strong></dt>
  <dd><%= @movie.length %></dd>
  <dt><strong><%= model_class.human_attribute_name(:release_date) %>:</strong></dt>
  <dd><%= @movie.release_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:budget) %>:</strong></dt>
  <dd><%= @movie.budget %></dd>
  <dt><strong><%= model_class.human_attribute_name(:info) %>:</strong></dt>
  <dd><%= @movie.info %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              movies_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_movie_path(@movie), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              movie_path(@movie),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>